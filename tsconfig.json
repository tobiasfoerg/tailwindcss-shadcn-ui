{
  "compilerOptions": {

    "target": "ESNext",                                 
    "module": "commonjs",              
    "rootDir": "./src",                
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                        
    "skipLibCheck": true         ,
    "outDir": "dist",
    "declaration": true,       
    "noEmit": true,                
    "paths": {
      "~/*":["./src/*"]
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
